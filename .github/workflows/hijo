name: hijo

on:
  repository_dispatch:
    types: [workflow_dispatch]
    inputs:
      ref:
        description: 'Branch a ejecutar'
        required: true
      sha:
        description: 'SHA del commit'
        required: true

jobs:
  job1:
    runs-on: ubuntu-latest
    steps:
      - name: Paso 1 en Workflow Hijo
        run: echo "Hola desde el paso 1 en Workflow Hijo"
      - name: Paso 2 en Workflow Hijo
        run: |
          echo "Ref recibida: ${{ github.event.client_payload.ref }}"
          echo "SHA recibido: ${{ github.event.client_payload.sha }}"
